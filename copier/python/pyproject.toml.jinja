[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
license = "{{ license }}"
license-files = ["LICENSE"]
requires-python = ">=3.10"
dependencies = []
{% if author %}
authors = [{ name = "{{ author }}" }]
{% endif %}

[build-system]
requires = ["hatchling>=1.27.0"]
build-backend = "hatchling.build"

[tool.ruff]
line-length = 100
